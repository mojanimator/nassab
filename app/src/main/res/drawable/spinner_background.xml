<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary" />
                    <stroke android:width="4px" android:color="@color/colorPrimaryDark" />
                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="15dp" android:topLeftRadius="15dp" android:topRightRadius="5dp" />
                </shape>
            </item>

            <item>
                <bitmap android:gravity="center_horizontal" android:src="@android:drawable/arrow_down_float" />
            </item>
        </layer-list>
    </item>

</selector>